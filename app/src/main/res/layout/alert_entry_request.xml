<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_fab_txt">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtRequestMsg"
            android:padding="10dp"
            android:text="@string/entry_request_msg"
            android:fontFamily="@font/david_libre"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRequestPositive"
            android:layout_below="@+id/txtRequestMsg"
            app:cornerRadius="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/entry_request_positive_btn"
            android:textAllCaps="false"
            android:fontFamily="@font/aladin"
            android:textSize="20sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRequestNegative"
            android:layout_below="@+id/btnRequestPositive"
            app:cornerRadius="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/omitir"
            android:textAllCaps="false"
            android:fontFamily="@font/aladin"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/dark_olive"
            android:id="@+id/pbEntry"
            android:visibility="invisible"/>


    </RelativeLayout>

</RelativeLayout>