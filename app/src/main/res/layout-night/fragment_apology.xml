<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bkg_cuenta"
    tools:context=".ui.main.apology.ApologyFragment">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="133dp"
        android:src="@drawable/broken_glass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:scaleType="centerCrop"
        android:id="@+id/img_broken_glass"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_apology"
        android:background="@drawable/shape_fab_txt"
        android:layout_below="@+id/img_broken_glass"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apology"
            android:textColor="@color/soft_light_teal"
            android:textSize="18sp"
            android:fontFamily="@font/david_libre"
            android:padding="10dp"/>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/cuenta_nombre"
        android:layout_below="@+id/txt_apology"
        android:fontFamily="@font/david_libre"
        android:layout_centerHorizontal="true"
        android:id="@+id/edt_apology_nombre"
        android:layout_marginHorizontal="50dp"
        android:padding="10dp"
        android:background="@drawable/shape_rounded_corners_for_edt"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/telefono"
        android:layout_below="@+id/edt_apology_nombre"
        android:fontFamily="@font/david_libre"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/edt_apology_telefono"
        android:padding="10dp"
        android:background="@drawable/shape_rounded_corners_for_edt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_apology_telefono"
        android:background="@drawable/shape_fab_txt"
        android:text="@string/apology_bonos"
        android:textSize="18sp"
        android:textColor="@color/soft_light_teal"
        android:fontFamily="@font/david_libre"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:padding="10dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_ok"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/fab_apology_ok"/>




</RelativeLayout>