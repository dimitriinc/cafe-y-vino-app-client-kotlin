<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fab_txt"
    tools:context=".ui.introduction.PrivacyDialog">

    <TextView
        android:id="@+id/txtPrivacyMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/futura"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/privacy_msg"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrivacySaber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPrivacyMsg"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/darkest_teal"
        android:text="@string/privacy_saber"
        android:textAllCaps="false"
        app:cornerRadius="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPrivacySaber"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrivacyPermitir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/darkest_teal"
            android:text="@string/permitir"
            android:textAllCaps="false"
            app:cornerRadius="5dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrivacyRechazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/pastel"
            android:text="@string/rechazar"
            android:textAllCaps="false"
            app:cornerRadius="5dp" />

    </LinearLayout>


</RelativeLayout>